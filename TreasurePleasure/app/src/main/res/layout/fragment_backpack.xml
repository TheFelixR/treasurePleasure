<?xml version="1.0" encoding="utf-8"?>
<!-- Fragment layout that displays player backpack -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/backpack_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF0">

    <TextView
        android:id="@+id/backpack_hello"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="BACKPACK HELLO"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/backpack_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Backpack, Click Me!"
        android:textSize="30sp" />

</android.support.constraint.ConstraintLayout>